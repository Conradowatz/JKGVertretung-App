<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:elevation="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Dieser Tag ist nicht online verfügbar.\n\nAn diesem Tag wurden von keinem Fach Stunden hinterlegt. Öffne dafür den Manager." />

    <Button
        android:id="@+id/managerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/accent"
        android:drawableLeft="@drawable/ic_mode_edit_white_24dp"
        android:padding="10dp"
        android:text=" Manager öffnen"
        android:textColor="@color/white" />

</LinearLayout>